<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
											 xmlns:app="http://schemas.android.com/apk/res-auto"
											 xmlns:tools="http://schemas.android.com/tools"
											 android:orientation="horizontal"
											 android:layout_width="match_parent"
											 android:layout_height="510dp"
											 android:background="@color/gray"
											 android:layout_gravity="center"
											 android:id="@+id/relativeLayout">
	<View
			android:layout_width="297dp"
			android:layout_height="383dp"
			android:id="@+id/background"
			android:background="@drawable/round_bord"
			app:layout_constraintBottom_toTopOf="@+id/bottom_text"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"/>


	<ImageView
			android:contentDescription="@string/app_name"
			android:layout_width="match_parent"
			android:layout_height="119dp"
			android:id="@+id/top_logo"
			android:layout_weight="100"
			android:src="@drawable/icon"
			android:layout_gravity="top"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginTop="28dp" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="470dp"
			app:layout_constraintBottom_toTopOf="@+id/bottom_text" app:layout_constraintVertical_bias="0.236"/>
	<TextView
			android:text=""
			android:layout_width="297dp"
			android:layout_height="51dp"
			android:id="@+id/bottom_text"
			android:textColor="@color/white"
			android:textStyle="bold"
			android:background="@drawable/lower_text"
			android:layout_marginBottom="28dp"
			android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="20dp"
			app:layout_constraintHorizontal_bias="0.493"
	/>
	<TextView
			android:text=""
			android:textSize="17sp"
			android:textStyle="bold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/main_title"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"
			app:layout_constraintTop_toBottomOf="@+id/top_logo"/>
	<TextView
			android:text=""
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sub_title" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintTop_toBottomOf="@+id/main_title"/>
	<TextView
			android:text=""
			android:textSize="30sp"
			android:textStyle="bold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/month_tv"
			android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintTop_toBottomOf="@+id/sub_title"/>
	<View
			android:layout_width="250dp"
			android:layout_height="8dp"
			android:background="@color/black"
			app:layout_constraintTop_toBottomOf="@+id/month_tv"
			app:layout_constraintEnd_toEndOf="@+id/background" app:layout_constraintStart_toStartOf="@+id/background"
			android:id="@+id/top_line"
	/>
	<LinearLayout
			android:layout_width="247dp"
			android:layout_height="42dp"
			android:orientation="horizontal"
			app:layout_constraintEnd_toEndOf="@+id/background"
			app:layout_constraintStart_toStartOf="@+id/background"
			app:layout_constraintHorizontal_bias="0.47"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/bottom_text"
			android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
			android:id="@+id/weeksBar">

	</LinearLayout>
	<LinearLayout
			android:layout_width="247dp"
			android:layout_height="181dp"
			android:orientation="horizontal"
			app:layout_constraintEnd_toEndOf="@+id/background"
			app:layout_constraintStart_toStartOf="@+id/background"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="8dp"
			android:id="@+id/graphs_view"
			app:layout_constraintHorizontal_bias="0.47"
			app:layout_constraintBottom_toBottomOf="@+id/bottom_line" android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/month_tv" app:layout_constraintVertical_bias="0.0"/>
	<LinearLayout
			android:id="@+id/images"
			android:layout_width="247dp"
			android:layout_height="181dp"
			android:orientation="horizontal"
			app:layout_constraintEnd_toEndOf="@+id/background"
			app:layout_constraintStart_toStartOf="@+id/background"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="8dp"
			app:layout_constraintHorizontal_bias="0.47"
			app:layout_constraintBottom_toBottomOf="@+id/bottom_line" android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/month_tv" app:layout_constraintVertical_bias="0.0"/>
	<View
			android:layout_width="250dp"
			android:layout_height="2dp"
			android:background="@color/black" android:id="@+id/bottom_line"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintBottom_toTopOf="@+id/bottom_text"
			android:layout_marginBottom="50dp"/>
</android.support.constraint.ConstraintLayout>
